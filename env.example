# 应用配置
DEBUG=false
LOG_LEVEL=info
HOST=0.0.0.0
PORT=8001
FRONTEND_PORT=3000

# 数据库配置
DATABASE_URL=sqlite:///./data/subscription_converter.db
# 生产环境建议使用PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/subscription_converter

# 安全配置 - 生产环境必须修改
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
MIN_PASSWORD_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300
SESSION_TIMEOUT=1800
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS配置 - 生产环境应该限制为实际域名
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# 订阅配置
SUBSCRIPTION_BASE_URL=http://localhost:8001

# 节点检测配置
NODE_CHECK_TIMEOUT=10
NODE_CHECK_INTERVAL=600

# 缓存配置
CACHE_TTL=300
